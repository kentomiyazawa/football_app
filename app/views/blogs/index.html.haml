.main
  .blogs
    %h1
      ブログ一覧
    .blogs__list
      - @blogs.each do |blog|
        .blogs__list__blog
          .blogs__list__blog__title
            = link_to blog.title, blog_path(blog)
          .blogs__list__blog__info
            .blogs__list__blog__info__user
              = link_to blog.user.name, user_path(blog.user)
            .blogs__list__blog__info__create
              = blog.created_at.strftime("%Y年%m月%d日")
            .blogs__list__blog__info__like
              いいね

