.main
  .player-lists
    %h1
      = @team.name.upcase
    .player-lists__list
      .player-lists__list__player
        %table
          %tr
            %th
              背番号
            %th
              ポジション
            %th
              選手名
            %th
              年齢 
            %th
              利き足
            %th
              身長
            %th
              体重
            %th
              国籍
          - @players.each do |player|
            %tr
              %td
                = player.uniform_number
              %td
                = player.position
              %td
                = player.name.capitalize
              %td
                = "#{player.age}歳"
              %td
                = player.footed
              %td
                = "#{player.height}cm"
              %td
                = "#{player.weight}kg"
              %td
                = player.nationally.capitalize
